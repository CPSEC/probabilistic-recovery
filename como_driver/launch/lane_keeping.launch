<!-- Launch file for the Perot demo. Line follower + Collision avoidance using the LIDAR-->

<launch>

    <!-- SYSTEM MODEL -->
    <!-- vehicle parameters -->
    <param name="L_a" type="double" value="0.125" />
    <param name="L_b" type="double" value="0.125" />
    <!-- control parameters -->
    <param name="input_gain" type="double" value="0.3" />
    
    <!-- ARDUINO -->
    <node pkg="rosserial_python" type="serial_node.py" name="arduino_node" >
        <param name="port" value="/dev/ttyUSB1" />
    </node>

	<!-- LOW-LEVEL CONTROLLER -->
	<node pkg="barc" type="controller_low_level.py" name="low_level_controller" output="screen" />
    
    <!-- High-LEVEL CONTROLLER (line_follower) -->
	<node pkg="controllers" type="lane_keeping_control.py" name="lane_keeping_control" output="screen"/>

    <!-- Intermediate level controller-->
	<node pkg="como_driver" type="lane_keeping.py" name="lane_keeping" output="screen"/>

    <!-- optitrack -->
    <node pkg="odometry" type="optitrack.py" name="odometry" output="screen" />


    <!-- odometry -->
    <!-- <node pkg="odometry" type="odometry.py" name="odometry" output="screen" /> -->
	
	
	
        
</launch>
